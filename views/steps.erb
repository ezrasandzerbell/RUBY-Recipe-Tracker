<div class="row">
  <div class="col-md-7">
    <% if @measurements != []%>
    <h2>Recipe Ingredients:</h2>
      <ul>
        <% @measurements.each do |measurement| %>
          <li><%= measurement.name %></li>
        <% end %>
      </ul>
    <% end %>

    <% if @steps != []%>
    <h2>Recipe Steps:</h2>
      <ul>
        <% @steps.each do |step| %>
          <li><%= step.name %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="col-md-5">
    <form class="" action="index.html" method="post">
      <h2>Create New Recipe Step</h2>
      <input type="text" class="form-control" name="step_description" placeholder="describe step here">
      <button type="submit" class="btn btn-info">Add</button>
    </form>
  </div>
</div>

<a href"/"><button type="button" name="button">Submit recipe</button></a>
