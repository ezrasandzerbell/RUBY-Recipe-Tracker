<form action="/recipes" method="post">
  <label for="recipe_title">Name your recipe:</label>
  <input type="text" class="form-control" name="recipe_title" placeholder="name of your recipe">

  <label for="cook_time">Cook time (in minutes):</label>
  <input type="text" class="form-control" name="cook_time" placeholder="">

  <label for="serving_size">Serving Size:</label>
  <input type="text" class="form-control" name="serving_size" placeholder="serving size">

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
